<div class="main_box">
  <div class="login_img">
    <%= image_tag "mobile/logo.png" %>
  </div>

  <div class="login-box">
    <h4 class="login-title">
      <%#= view_resource('nebula')%>
    </h4>

    <form accept-charset="UTF-8" action="/admin/sessions" class="login-well" method="post">
      <input name="utf8" type="hidden" value="âœ“">
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
      <fieldset class="form-group">

        <div class="form-group">
          <div class="input-group input-icon input-icon-left">
            <i class="icon-user"></i>
            <input name="session[login]" type="text" class="form-control" placeholder="<%= view_resource("login")%>" value="<%= params[:session][:login]%>"/>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group input-icon input-icon-left">
            <i class="icon-lock"></i>
            <input name="session[password]" type="password" class="form-control" placeholder="<%= view_resource("password")%>"
                   value="<%= params[:session][:password]%>" />
          </div>
        </div>

        <h6 class="error_info" style="color: #ff0000"><%= @error_info ? view_resource(@error_info) : ""%></h6>
        <div class="clearfix">
          <label class="inline">
            <input type="checkbox" class="ace" name="remember_me"
                   <%= !params[:session][:login].blank? ? "checked='checked'" : nil %>/>
            <span class="lbl"><%= view_action("remember_me") %></span>
          </label>
          <button class="pull-right btn btn-primary" type="submit" name="button">
            <i class="icon-key"></i>
            <%= view_action("login")%>
          </button>
        </div>
      </fieldset>
    </form>

  </div>

</div>

<script type="text/javascript">
    function show_box(id) {
        $('.widget-box.visible').removeClass('visible');
        $('#' + id).addClass('visible');
    }

    (function() {
        var onWindowResize = function() {
            var b = document.querySelector('.main_box');
            b.style.marginTop = (window.innerHeight - b.offsetHeight) / 2 + 'px';
        }
        window.addEventListener('resize', onWindowResize)
        onWindowResize()
    })()
</script>